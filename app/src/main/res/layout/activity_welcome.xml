<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/textView"
        android:layout_width="388dp"
        android:layout_height="134dp"
        android:layout_marginTop="40dp"
        android:text="@string/care"
        android:fontFamily="@font/same"
        android:textAlignment="center"
        android:textColor="#221E77"
        android:textSize="96sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"

        android:layout_width="369dp"

        android:layout_height="317dp"

        android:layout_marginTop="180dp"
        android:contentDescription="@string/todowelcome"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcomepic" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="299dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:text="Welcome"
        android:textColor="#2192BF"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageViewwelcome"
        android:layout_width="98dp"
        android:layout_height="57dp"
        android:layout_marginTop="110dp"
        android:contentDescription="@string/todo2welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.918"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/ic_baseline_health_and_safety_24" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="@string/create_an_account_and_start_a_healthy_life"
        android:textColor="#2192BF"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewwelcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.618"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>